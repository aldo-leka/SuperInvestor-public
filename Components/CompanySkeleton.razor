<div class="container mt-4">
    <div class="skeleton-loader">
        <div class="skeleton-line" style="width: 50%; height: 40px;"></div>
        <div class="skeleton-line" style="width: 30%; height: 24px; margin-bottom: 20px;"></div>

        <div class="row mb-4">
            <div class="col-md-6">
                <SuperCard Title="Share Price">
                    <div class="skeleton-line" style="width: 60%; height: 30px; margin: 0 auto;"></div>
                </SuperCard>
            </div>
            <div class="col-md-6">
                <SuperCard Title="Market Cap">
                    <div class="skeleton-line" style="width: 60%; height: 30px; margin: 0 auto;"></div>
                </SuperCard>
            </div>
        </div>

        <div class="row">
            @foreach (var category in new[] { "Financials", "Prospectuses", "Ownership", "News", "Proxies", "Other" })
            {
                <div class="col-md-4 mb-4">
                    <SuperCard Title="@category">
                        <div class="table-responsive" style="max-height: 300px; overflow-y: auto;">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Form</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int j = 0; j < 5; j++)
                                    {
                                        <tr>
                                            <td><div class="skeleton-line" style="width: 80px;"></div></td>
                                            <td><div class="skeleton-line" style="width: 60px;"></div></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </SuperCard>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .skeleton-loader {
        animation: loading 1.5s infinite;
    }

    .skeleton-line {
        height: 15px;
        margin-bottom: 10px;
        background-color: #e0e0e0;
        border-radius: 4px;
    }

    @@keyframes loading {
        0% {
            opacity: 0.6;
        }

        50% {
            opacity: 1;
        }

        100% {
            opacity: 0.6;
        }
    }
</style>