<div class="skeleton-loader">
    @for (int i = 0; i < 20; i++)
    {
        <div class="skeleton-line" style="width: @(Random.Shared.Next(70, 100))%;"></div>
    }
</div>

<style>
    .skeleton-loader {
        animation: loading 1.5s infinite;
    }
    .skeleton-line {
        height: 15px;
        margin-bottom: 10px;
        background-color: #e0e0e0;
        border-radius: 4px;
    }
    @@keyframes loading {
        0% { opacity: 0.6; }
        50% { opacity: 1; }
        100% { opacity: 0.6; }
    }
</style>